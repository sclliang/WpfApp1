<Window x:Class="Camera.MessageShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Camera"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
       WindowStyle="None"
        TabIndex="0"
         Title="Message" Height="120" Width="300">
    <Grid>
        <TextBlock Text="是否PASS?" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button x:Name="PA" Background="Green" Foreground="White" Content="PASS" Width="75" Margin="5" Click="PassButton_Click"/>
            <Button Background="Red" Foreground="White" Content="FAIL" Width="75" Margin="5" Click="FailButton_Click"/>
            <Button Content="RETRY" Width="75" Margin="5" Click="RetryButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
