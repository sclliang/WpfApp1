<Window x:Class="Camera.StickNode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Camera"
        mc:Ignorable="d"
         Title="StickyNote" WindowStyle="None"
            AllowsTransparency="True"
  
            Background="Transparent"
   
        Topmost="True"
    
        ShowInTaskbar="False"
    
        Width="400" Height="40">
    <Border Background="#FF8FED8F" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
        <TextBlock Text="This is a sticky note!"
                   Name="INFO"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   FontSize="16"/>
    </Border>
</Window>
